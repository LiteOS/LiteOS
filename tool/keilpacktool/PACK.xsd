    <xs:attribute name="Dfamily"     type="xs:string"        use="optional"/>
    <xs:attribute name="DsubFamily"  type="xs:string"        use="optional"/>
    <xs:attribute name="Dname"       type="xs:string"        use="optional"/>
  </xs:complexType>

  <xs:complexType name="BoardsDeviceType">
